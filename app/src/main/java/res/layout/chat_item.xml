<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trans">

    <RelativeLayout
        android:id="@+id/left_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="5dp">

        <testoffpro.hmj.yibin.testoffpro.util.CircleImageView
            android:id="@+id/msgitem_icon_l"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/nav_per" />

        <TextView
            android:id="@+id/left_nikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/msgitem_icon_l"
            android:text="nikename" />

        <FrameLayout
            android:id="@+id/left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_nikename"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/msgitem_icon_l"
            android:background="@drawable/left"
            android:paddingLeft="13dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/left_img"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/voice_l_contet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/voice_l_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/adj_b" />

                <TextView
                    android:id="@+id/voice_l_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="66'" />
            </LinearLayout>

        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <testoffpro.hmj.yibin.testoffpro.util.CircleImageView
            android:id="@+id/msgitem_icon_r"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/nav_per" />


        <TextView
            android:id="@+id/right_nikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/msgitem_icon_r"
            android:text="nikename" />

        <FrameLayout
            android:id="@+id/right_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_nikename"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/msgitem_icon_r"
            android:background="@drawable/right"
            android:paddingLeft="5dp"
            android:paddingRight="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/right_img"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/voice_r_contet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/voice_r_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="66'" />

                <ImageView
                    android:id="@+id/voice_r_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/adj" />
            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>
</RelativeLayout>