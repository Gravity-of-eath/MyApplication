<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:padding="15dp">

    <TextView
        android:id="@+id/address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="name" />

    <TextView
        android:id="@+id/address_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/address_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/address_name"
        android:text="1234567899" />

    <TextView
        android:id="@+id/address_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_name"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:text="湖北省武汉市光谷大道光谷智慧园" />

<TextView
    android:id="@+id/devider_"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_below="@+id/address_address"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/list_devider_color"/>

    <TextView
        android:id="@+id/duf_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/devider_"
        android:textColor="@color/orange_color"
        android:text="@string/duf_address"/>
    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/devider_"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/icon_sc"
        android:text="@string/delete"/>
    <TextView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/devider_"
        android:layout_toLeftOf="@+id/delete"
        android:drawableLeft="@drawable/icon_bj"
        android:text="@string/edit"/>

</RelativeLayout>