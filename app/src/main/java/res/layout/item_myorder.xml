<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_myorder_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/logo" />


    <TextView
        android:id="@+id/item_myorder_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/item_myorder_img"
        android:maxLines="3"
        android:text="asdasdas  dasasd dasdasa dasfsdfsddfgdgdfgdfgdfgdfdfgdfas dasdasfasd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_myorder_img"
        android:layout_below="@+id/item_myorder_content"
        android:layout_toRightOf="@+id/item_myorder_img"
        android:padding="5dp">

        <TextView
            android:id="@+id/item_myorder_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="$50" />

        <TextView
            android:id="@+id/item_myorder_text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_myorder_text1"
            android:gravity="center_vertical"
            android:text="$100" />

        <Button
            android:id="@+id/item_myorder_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/loginbtn_bg"
            android:gravity="center"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/gray3" />
    </RelativeLayout>
</RelativeLayout>